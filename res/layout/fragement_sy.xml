<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
    <RelativeLayout 
         android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#68bf81">
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    
   <!-- ********************************* 轮播 ************************************ -->
<RelativeLayout 
           android:layout_width="match_parent"
      android:layout_height="40dp"
    android:background="@drawable/nav"
    android:orientation="horizontal">
        
    <LinearLayout 
         android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
    <RelativeLayout 
         android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/sy_r_tab1"
            android:background="@drawable/chosebg"
        >
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成"
            android:textColor="#25bdd4"
            android:id="@+id/sy_text_chose1"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    
     <RelativeLayout 
         android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/sy_r_tab2"
            android:background="@drawable/unchosebg"
        >
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="#666666"
            android:textSize="16dp"
            android:id="@+id/sy_text_chose2"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
      </LinearLayout>
    </RelativeLayout>

<FrameLayout 
      android:layout_width="fill_parent"
            android:layout_height="fill_parent"
    >
    
   
  <LinearLayout 
        android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/sy_list1"
      ></LinearLayout>
  <!-- 未完成选项卡 -->
  
  <LinearLayout 
        android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/sy_list2"
      ></LinearLayout>
 <!-- 已完成选项卡 --> 
  
  </FrameLayout>
</LinearLayout>