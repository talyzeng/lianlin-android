<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:gravity="right"
       android:background="#00000000"
     >
     <LinearLayout 
         android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="right"
       android:orientation="vertical" >  
   <TextView 
           android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="2015-01-01"
       android:textColor="#333333"
       android:textSize="12dp"
       android:id="@+id/list_xx2_text_time"
       android:layout_gravity="right"
       android:visibility="gone"
          />

  
      <TextView 
           android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="我"
       android:textColor="#333333"
       android:layout_marginRight="15dp"
       android:layout_alignParentRight="true"
       android:textSize="14dp"
       android:id="@+id/list_xx2_text_name"
       android:layout_gravity="right"
          />
     
       <TextView 
           android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="你好烦"
       android:textColor="#000000"
       android:background="@drawable/dhkmesea"
       android:layout_marginRight="10dp"
       android:layout_marginTop="3dp"
       android:layout_alignParentRight="true"
       android:textSize="16dp"
       android:id="@+id/list_xx2_text_content"
       android:gravity="right"
          />
    
     
        <TextView 
           android:layout_width="0dp"
       android:layout_height="0dp"
       android:id="@+id/list_xx2_text_id"
       android:visibility="invisible"
          />
  </LinearLayout>
  
  <LinearLayout 
         android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="right" 
        >

       <ImageView
           android:id="@+id/list_xx2_image"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="right" 
           android:scaleType="fitCenter"
           android:src="@drawable/login_tx" />

     </LinearLayout>
   
    
</LinearLayout>